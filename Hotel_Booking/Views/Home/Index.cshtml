@{
    ViewData["Title"] = "Trang chủ";
}

@model IEnumerable<Hotel_Booking.Models.DTO.HotelWithImageViewDto>

<h3 class="mt-3">Lựa chọn khách sạn dành cho bạn</h3>

<div class="row mb-3 mt-3">
    <div class="col-6">
        <select class="form-select">
            <option selected>TP.HCM</option>
            <option>Hà Nội</option>
            <option>Cà Mau</option>
        </select>
    </div>
    <div class="col-6">
        <input class="form-select" placeholder="Số lượng khách" type="number"/>       
    </div>
</div>

<div class="home d-flex gap-2">
    @foreach (var hotel in Model)
    {
        <a class="hotel card text-decoration-none"
           asp-controller="Hotels"
           asp-action="Detail"
           asp-route-id="@hotel.Hotel.Id" style="width: 30%">
            <div style="width: 100%; height: 200px">
                <img src="@hotel.ImageUrl" alt="@hotel.Hotel.Name" style="width: 100%; object-fit: contain; height: 200px">
            </div>
            <div class="container">
                <h4><b>@hotel.Hotel.Name</b></h4>
                <p>@hotel.Hotel.Address</p>
                <p>@hotel.Hotel.Phone</p>
            </div>
        </a>
    }
</div>


