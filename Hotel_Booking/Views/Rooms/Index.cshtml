@model IEnumerable<Hotel_Booking.Models.Domains.Room>

<h3 class="mt-3">Danh sách phòng</h3>

<div class="d-flex justify-content-end">
    <a class="btn btn-secondary" asp-controller="Rooms" asp-action="Add">Thêm phòng</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tên phòng</th>
            <th>Số phòng</th>
            <th>Giá tiền</th>
            <th>Loại phòng</th>
            <th>Sức chứa</th>
            <th>Trạng thái</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model)
        {
            <tr>
                <td>@room.Id</td>
                <td>@room.Name</td>
                <td>@room.RoomNumber</td>
                <td>@room.Price</td>
                <td>@room.RoomType</td>
                <td>@room.Capacity</td>
                <td>@room.Status</td>
                <td>
                    <a asp-controller="Rooms"
                       asp-action="Edit"
                       asp-route-id="@room.Id"
                       class="btn btn-light">Chỉnh sửa</a>
                </td>
            </tr>
        }
    </tbody>
</table>