@model IEnumerable<Hotel_Booking.Models.DTO.RoomWithImageViewDto>

<div class="home d-flex gap-2">
    @foreach (var room in Model)
    {
        <a class="room card text-decoration-none"
             asp-controller="Rooms"
             asp-action="Detail"
             asp-route-id="@room.Room.Id" style="width: 30%">
          <div style="width: 100%; height: 200px">
                <img src="@room.ImageUrl" alt="@room.Room.Name" style="width: 100%; object-fit: contain; height: 200px">
          </div>
          <div class="container">
                <h4><b>@room.Room.Name</b></h4>
                <p>@room.Room.RoomType</p>
                <p>@room.Room.Price</p>
          </div>
            <form asp-controller="Bookings"
                  asp-action="Add"
                  method="post"
                  class="mt-2">
                <input type="hidden" name="RoomId" value="@room.Room.Id" />
                <input type="submit" class="btn btn-primary" value="Đặt phòng" />
            </form>
        </a>
    }
</div>
