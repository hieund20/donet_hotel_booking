@model IEnumerable<Hotel_Booking.Models.Domains.Room>

<div class="home d-flex gap-2">
    @foreach (var room in Model)
    {
        <a class="room card"
             asp-controller="Home"
             asp-route-id="@room.Id" style="width: 20%">
          <div class="container">
                <h4><b>@room.Name</b></h4>
                <p>@room.RoomType</p>
                <p>@room.Price</p>
          </div>
            <form asp-controller="Bookings"
                  asp-action="Add"
                  method="post"
                  class="mt-2">
                <input type="hidden" name="RoomId" value="@room.Id" />
                <button type="submit" class="btn btn-primary">Đặt phòng</button>
            </form>
        </a>
    }
</div>
