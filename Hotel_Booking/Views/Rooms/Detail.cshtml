@{
}

@model Hotel_Booking.Models.Domains.Room

@if (Model is not null)
{
    <div class="room-detail">
        <div class="mt-3">
            <span class="form-label"><b>Tên phòng</b></span>
            <p>@Model.Name</p>
        </div>

        <div class="mt-3">
            <span><b>Số phòng</b></span>
            <p>@Model.RoomNumber</p>
        </div>

        <div class="mt-3">
            <span><b>Giá tiền</b></span>
            <p>@Model.Price</p>
        </div>

        <div class="mt-3">
            <span><b>Loại phòng</b></span>
            <p>@Model.RoomType</p>
        </div>

        <div class="mt-3">
            <span><b>Sức chứa</b></span>
            <p>@Model.Capacity</p>
        </div>

        <div class="mt-3">
            <span><b>Trạng thái</b></span>
            <p>@Model.Status</p>
        </div>

        <div class="mt-3">
            <span><b>Khách sạn</b></span>
            <p>@Model.HotelId</p>
        </div>
    </div>
}
