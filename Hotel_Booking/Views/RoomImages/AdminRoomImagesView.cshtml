@model IEnumerable<Hotel_Booking.Models.Domains.RoomImage>

@{
    var roomId = ViewBag.RoomId;
}

<h3 class="mt-3">Danh sách hình ảnh phòng</h3>

<div class="d-flex justify-content-end">
    <a class="btn btn-secondary" asp-controller="RoomImages" asp-action="Add" asp-route-roomId="@roomId">Thêm hình ảnh</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Id phòng</th>
            <th>Hình ảnh</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var image in Model)
        {
            <tr>
                <td>@image.Id</td>
                <td>@image.RoomId</td>
                <td><img src="@image.FilePath" alt="@image.FileName" style="width: 50px; height: 50px" /></td>
                <td>
                    <a asp-controller=""
                       asp-action=""
                       asp-route-id=""
                       class="btn btn-light">Chỉnh sửa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

