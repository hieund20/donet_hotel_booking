@model Hotel_Booking.Models.Domains.Hotel

@if (Model is not null)
{
    <div class="room-detail">
        <div class="mt-3">
            <span class="form-label"><b>Tên khách sạn</b></span>
            <p>@Model.Name</p>
        </div>

        <div class="mt-3">
            <span><b>Mô tả</b></span>
            <p>@Model.Description</p>
        </div>

        <div class="mt-3">
            <span><b>Số điện thoại</b></span>
            <p>@Model.Phone</p>
        </div>

        <div class="mt-3">
            <span><b>Email</b></span>
            <p>@Model.Email</p>
        </div>
    </div>
}

