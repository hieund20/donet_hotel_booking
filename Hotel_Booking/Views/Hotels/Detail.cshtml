@model Hotel_Booking.Models.DTO.HotelWithImageViewDto

@if (Model is not null)
{
    <div class="room-detail">
        <div class="mt-3">
            <img src="@Model.ImageUrl" alt="@Model.Hotel.Name" />
        </div>

        <div class="mt-3">
            <span class="form-label"><b>Tên khách sạn</b></span>
            <p>@Model.Hotel.Name</p>
        </div>

        <div class="mt-3">
            <span><b>Mô tả</b></span>
            <p>@Model.Hotel.Description</p>
        </div>

        <div class="mt-3">
            <span><b>Số điện thoại</b></span>
            <p>@Model.Hotel.Phone</p>
        </div>

        <div class="mt-3">
            <span><b>Email</b></span>
            <p>@Model.Hotel.Email</p>
        </div>

        <a asp-controller="Rooms"
           asp-action="GetAllByHotelId"
           asp-route-hotelId="@Model.Hotel.Id">Xem phòng</a>
    </div>
}

