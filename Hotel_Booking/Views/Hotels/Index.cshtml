@model IEnumerable<Hotel_Booking.Models.Domains.Hotel>

<h3 class="mt-3">Danh sách khách sạn</h3>

<div class="d-flex justify-content-end">
    <a class="btn btn-secondary" asp-controller="Hotels" asp-action="Add">Thêm khách sạn</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tên khách sạn</th>
            <th>Mô tả</th>
            <th>Địa chỉ</th>
            <th>Số điện thoại</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hotel in Model)
        {
            <tr>
                <td>@hotel.Id</td>
                <td>@hotel.Name</td>
                <td>@hotel.Description</td>
                <td>@hotel.Address</td>
                <td>@hotel.Phone</td>
                <td>@hotel.Email</td>
                <td>
                    <a asp-controller="Hotels"
                       asp-action="Edit"
                       asp-route-id="@hotel.Id"
                       class="btn btn-light">Chỉnh sửa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
