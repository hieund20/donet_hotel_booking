@model IEnumerable<Hotel_Booking.Models.Domains.HotelImage>

@{
    var hotelId = ViewBag.HotelId;
}

<h3 class="mt-3">Danh sách hình ảnh khách sạn</h3>

<div class="d-flex justify-content-end">
    <a class="btn btn-secondary" asp-controller="HotelImages" asp-action="Add" asp-route-hotelId="@hotelId">Thêm hình ảnh</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Id khách sạn</th>
            <th>Hình ảnh</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var image in Model)
        {
            <tr>
                <td>@image.Id</td>
                <td>@image.HotelId</td>
                <td><img src="@image.FilePath" alt="@image.FileName" style="width: 50px; height: 50px" /></td>
                <td>
                    <a asp-controller=""
                       asp-action=""
                       asp-route-id=""
                       class="btn btn-light">Chỉnh sửa</a>
                </td>
            </tr>
        }
    </tbody>
</table>