@model IEnumerable<Hotel_Booking.Models.Domains.Booking>

<h1 class="mt-3">Danh sách đặt phòng</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Id khách hàng</th>
            <th>Id phòng</th>
            <th>Thời gian đặt phòng</th>
            <th>Thời gian Check-in</th>
            <th>Thời gian Check-out</th>
            <th>Trạng thái</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.Id</td>
                <td>@booking.CustomerId</td>
                <td>@booking.RoomId</td>
                <td>@booking.BookingDate</td>
                <td>@booking.CheckingDate</td>
                <td>@booking.CheckOutDate</td>
                <td>@booking.Status</td>
                <td>
                    <a asp-controller="Bookings"
                       asp-action="Edit"
                       asp-route-id="@booking.Id"
                       class="btn btn-light">Chỉnh sửa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex align-items-center">
    @*Xác nhận, chuyển đến trang mới Payment, thực hiện thanh toán, sau khi thanh toán, 
    lưu danh sách phòng đã đặt vào Booking History*@
    <button class="btn btn-primary">Xác nhận</button>
    <form asp-controller="Bookings" asp-action="Cancel" method="post" class="ml-2">
        <button type="submit" class="btn btn-danger">Hủy</button>
    </form>
</div>

