@using Microsoft.AspNetCore.Identity
@model Hotel_Booking.Models.DTO.EditUserRolesViewDto

<h1 class="mt-3">Quản lý quyền truy cập</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Id</label>
        <input type="text" class="form-control" asp-for="User.Id" readonly />
    </div>

    <div class="mt-3">
        <label class="form-label">Email</label>
        <input type="text" class="form-control" asp-for="User.Email" readonly />
    </div>

    <div class="mt-3">
        <label class="form-label">Số điện thoại</label>
        <input type="text" class="form-control" asp-for="User.PhoneNumber" readonly />
    </div>

    <div class="mt-3">
        <label class="form-label">Roles</label>
        <select asp-for="SelectedRoles" class="form-control" multiple>
            @{
                foreach (var role in Model.AllRoles)
                {
                    var selected = Model.UserRoles.Contains(role) ? "selected" : "";
                    <text>
                        <option value="@role" selected>@role</option>
                    </text>;
                }
            }
        </select>
    </div>

    <div class="mt-3 d-flex justify-content-between">
        <button type="submit" class="btn btn-secondary">Lưu</button>

        <button type="submit"
                asp-controller="Users"
                asp-action="Delete"
                class="btn btn-danger">
            Xóa
        </button>
    </div>
</form>
